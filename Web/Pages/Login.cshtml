@page
@model Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="container thumbnail">
        <form>
            <div class="form-group">
                <label for="labelemail">Label exemplo</label>
                <input type="text" class="form-control" id="email" placeholder="e-mail">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Outra label</label>
                <input type="text" class="form-control" id="senha" placeholder="Senha">
            </div>
            <hr />
            <button type="submit" id="addButton" class="btn btn-primary" onclick="addEntra();">
                Entrar
            </button>
        </form>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>

<script>
       
    function addEntra() {
       
        getEmployeeList();
    }

    function getEmployeeList() {

        var email = $("#email").val();
        var senha = $("#senha").val();

        $.ajax({
            url: 'https://localhost:44328/api/Login/',
            type: 'POST',
            contentType: "application/json",
            data: JSON.stringify({ "email": email, "senhahash": senha }),
            dataType: "json",       

            success: function (result) {
                alert(result);               
            },

            error: function (error) {                
                alert('erro');
            }
        });
    }


</script>
