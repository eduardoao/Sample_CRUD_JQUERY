@page
@model InclusaoModel
@{
    ViewData["Title"] = "Cadastro";
}
<h2>@ViewData["Title"]</h2>
<h3>@Model.Message</h3>



<div class="row">
    <div class="container thumbnail">
        <form>
            <div class="form-group">
                <label for="formGroupExampleInput">Label exemplo</label>
                <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Input exemplo">
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Outra label</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Outro input">
            </div>

            <hr />
            <button type="submit" id="addButton" class="btn btn-primary" onclick="addUsuario();">
                Adicionar usuário
            </button>

        </form>
    </div>
</div>

<script>
    function addUsuario() {
        var teste = $("#formGroupExampleInput").val();
        alert(teste);
        productAdd(teste);
    }

    function productAdd(product) {
        $.ajax({
            url: "https://localhost:44328/api/values",
            type: 'POST',
            contentType: "application/json;charset=utf-8",
            data: JSON.stringify(product),
            success: function (product) {
                productAddSuccess(product);
            },
            error: function (request, message, error) {                
                alert(message);
            }
        });
    }

</script>
